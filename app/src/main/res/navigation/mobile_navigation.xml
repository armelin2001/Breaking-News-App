<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home"
    android:theme="@style/Theme.BreakingNewsApp.NoActionBar">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.br.breakingnewsapp.ui.home.HomeFragment"
        android:theme="@style/Theme.BreakingNewsApp.NoActionBar"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.br.breakingnewsapp.ui.gallery.GalleryFragment"
        android:theme="@style/Theme.BreakingNewsApp.NoActionBar"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.br.breakingnewsapp.ui.slideshow.SlideshowFragment"
        android:theme="@style/Theme.BreakingNewsApp.NoActionBar"
        tools:layout="@layout/fragment_slideshow" />
</navigation>